    <!-- Top menu item -->
<menuitem id="coordination.menu_root"
            name="coordination"
            web_icon="br_consult,static/description/icon.png"
            sequence="40"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="coordination.menu_1" parent="coordination.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="coordination.menu_1_list" parent="coordination.menu_1"
              action="coordination.action_window"/>
<!--
    <menuitem name="Server to list" id="coordination" parent="coordination.menu_2"
              action="coordination.action_server"/>
-->
      
   <record id="view_prestation_prestation_kanban" model="ir.ui.view">
            <field name="name">coordination.coordination.kanban</field>
            <field name="model">coordination.coordination</field>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="oe_background_grey o_kanban_dashboard">
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="name"/>
                    <field name="address_site"/>
                    <field name="works_type"/>
                    <field name="kanban_color" invisible="1" force_save="1"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click  oe_kanban_card #{kanban_color(record.kanban_color.raw_value)}">
                                <div><strong class="o_kanban_record_title"><span> Coordonateur : <field name="user_id"/></span></strong></div> 
                                <div><strong class="o_kanban_record_title"><span> Num√©ro de dossier : <field name="name"/></span></strong></div>
                                <div><strong class="o_kanban_record_title"><span> Adresse e-mail de l'interlocuteur : <field name="partner_id"/></span></strong></div>
                                <div><span class="o_kanban_record_subtitle"> <strong> Adresse du chantier : </strong> <field name="address_site"/></span></div>
                                <div>
                                    <span class="o_kanban_record_subtitle"> <strong> Type de travaux : </strong><field     name="works_type"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
           </field>
        </record>
  </data>
</odoo>