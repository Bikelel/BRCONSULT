<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="coordination.list">
      <field name="name">coordination list</field>
      <field name="model">coordination.coordination</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="coordination.action_window">
      <field name="name">coordination window</field>
      <field name="res_model">coordination.coordination</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
