        <template id="update_mentor_page">
             
            <div id="wrap">
                <t t-call="portal.portal_layout">
                    <div class="oe_structure">
                        <section class="pt8 pb8">
                            <div class="container">
                                <div class="row s_nb_column_fixed">
                                    <div class="col-lg-12 s_title pt16 pb16"><h2>Mettre à jour le monteur pour <span t-field="prestation.name"/></h2></div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="container mt-2">
                        <div class="row">
                            <div class="col-lg-8">
                                <form id="update_mentor_form" action="/update_mentor/confirm" method="post"  t-att-data-order-id="prestation.id" t-att-data-token="prestation.access_token">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="prestation" t-att-value="prestation.id"/>
                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom" >
                                        <div class="col-lg-3 col-md-4"><label class="col-form-label" for="monteur">Monteur</label></div>
                                        <div class="col-lg-7 col-md-8">
                                            <select name="monteur" class="form-control" aria-label="Tapper sur un caractère de votre clavier pour parcourir plus vite la liste" title="Tapper sur un caractère de votre clavier pour parcourir plus vite la liste">                                           
                                                <option  selected="1" disabled="1" >Choisissez...</option>
                                                <t t-if="'mentor_id' in reload">
                                                    <t t-foreach="mentors or []" t-as="mentor">
                                                        <t t-if="int(reload['mentor_id']) == mentor.id">
                                                            <option t-att-value="mentor.id" selected="1"><t t-esc="mentor.name"/></option>
                                                        </t>
                                                        <t t-else="">
                                                            <option t-att-value="mentor.id"><t t-esc="mentor.name"/></option>
                                                        </t>
                                                    </t>
                                                </t>
                                                <t t-else="">
                                                    <t t-foreach="mentors or []" t-as="mentor">
                                                        <option t-att-value="mentor.id"><t t-esc="mentor.name"/></option>
                                                    </t>
                                                </t>
                                            </select>
                                        </div>
                                        <div style="margin-top:30px; margin-left:30px;">
                                            <a t-attf-href="/create_mentor/#{slug(prestation)}">
                                                 <span class="badge badge-pill">
                                                    <i class="fa fa-fw fa-plus" title="Créer le monteur" role="button" />
                                                     <span>Si votre monteur n'existe pas dans la liste, cliquez ici pour créer un nouveau</span>
                                                 </span>
                                             </a>
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                            <button role="button" href="#" class="btn btn-primary mb32 a-submit btn-sm" type="submit"><span>Enregistrer </span><i class="fa fa-chevron-right"/></button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </template>
        
        <template id="create_mentor_page">
             
