                                    <input type="hidden" name="prestation" t-att-value="prestation.id"/>
                                    <div class="form-group row form-field s_website_form_custom s_website_form_required_custom" >
                                        <div class="col-lg-3 col-md-4"><label class="col-form-label" for="name">Nom et Prénom</label></div>
                                        <div class="col-lg-7 col-md-8"><input type="text" class="form-control s_website_form_input" name="name" required=""/></div>
                                    </div>
                                    <div class="form-group row form-field s_website_form_custom s_website_form_required_custom" >
                                        <div class="col-lg-3 col-md-4"><label class="col-form-label" for="email">Email</label></div>
                                        <div class="col-lg-7 col-md-8"><input type="text" class="form-control s_website_form_input" name="email" required=""/></div>
                                    </div>
                                    <div class="form-group row form-field s_website_form_custom" >
                                        <div class="col-lg-3 col-md-4"><label class="col-form-label" for="tel">Téléphone</label></div>
                                        <div class="col-lg-7 col-md-8"><input type="text" class="form-control s_website_form_input" name="tel"/></div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                            <button role="button" href="#" class="btn btn-primary mb32 a-submit btn-sm" type="submit"><span>Créer un nouveau monteur </span><i class="fa fa-chevron-right"/></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </template>

    </data>
</odoo>