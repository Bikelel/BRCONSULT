                                        <tr>
                                            <th/>
                                            <th class="text-left">Point de vérification</th>
                                            <th>Observations/réserves</th>
                                            <th>Précision</th>
                                            <th>Photo</th>
                                            <th>Statut </th>
                                            <td>Date </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="prestation.constat_adequacy_exam_ids" t-as="constat">
                                            <tr>

                                                <td><span t-esc="num_verification_point + 1"/></td>
                                                <td ><span t-field="constat.verification_point_id"/></td>
                                                <td>
                                                    <ol>
                                                        <t t-foreach="constat.constat_observation_ids" t-as="observation">
                                                            <li><t t-if="observation.reserve">
                                                                    <span style="font-weight:bold;" t-field="observation.name"/>
                                                                 </t>
                                                                <t t-else=""><span t-field="observation.name"/></t>
                                                            </li>
                                                        </t>
                                                    </ol>
                                                </td>
                                                <td><span t-field="constat.precision"/></td>
                                                <td style="width: 310px;" class="text-center"><img t-if="constat.photo" t-att-src="image_data_uri(constat.photo)" style="max-width: 300px;"/>
                                                    </td>
