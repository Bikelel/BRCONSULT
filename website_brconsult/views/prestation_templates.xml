<odoo>
    <data>
        <template id="portal_my_home_menu_prestation" name="Portal layout : prestations" inherit_id="portal.portal_breadcrumbs" priority="20">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'prestation'" t-attf-class="breadcrumb-item #{'active ' if not prestation else ''}">
                    <a t-if="prestation" t-attf-href="/my/prestations?{{ keep_query() }}">Prestations</a>
                    <t t-else="">Prestations</t>
                </li>
            </xpath>
        </template>

        <template id="portal_my_home_prestation" name="Afficher Prestations" customize_show="True" inherit_id="portal.portal_my_home" priority="20">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Prestations</t>
                    <t t-set="url" t-value="'/my/prestations'"/>
                    <t t-set="placeholder_count" t-value="'prestation_count'"/>
                </t>
            </xpath>
        </template>
        <template id="portal_my_prestations" name="Mes prestations">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Prestations</t>
                </t>
                <t t-if="not prestations">
                    <p>There are currently no prestations for your account.</p>
                </t>
                <t t-if="prestations" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>N° Rapport #</th>
                            <th width="35%">Avis</th>
                            <th>Adresse de chantier</th>
                            <th>Date de vérification </th>
                            <th>Type d'inspection</th>
                            <th>Type d'installation</th>
                            <th>Nom du monteur</th>
                        </tr>
                    </thead>
                    <t t-foreach="prestations" t-as="prestation">
                        <tr>
                            <td><a t-att-href="prestation.get_portal_url()"><t t-esc="prestation.name"/></a></td>
                            <td>
                                <span t-if="prestation.opinion == 'favorable_opinion'" class="badge badge-pill badge-success"><i class="fa fa-fw fa-check"/> Avis favorable</span>
                                <span t-if="prestation.opinion == 'opinion_with_observation'" class="badge badge-pill badge-warning"><i class="fa fa-fw fa-clock-o"/> Favorable avec observation(s)</span>
                                <span t-if="prestation.opinion == 'defavorable_opinion'" class="badge badge-pill badge-danger"><i class="fa fa-fw fa-remove"/> Avis defavorable</span>
                                <span t-if="prestation.opinion == 'defavorable_opinion'" class="badge badge-pill badge-danger"><i class="fa fa-fw fa-remove"/> Mixte</span>
                            </td>
                            <td><span t-field="prestation.site_address"/></td>
                            <td><span t-field="prestation.verification_date" t-options='{"widget": "date"}'/></td>
                            <td><span t-field="prestation.inspection_type"/></td>
                            <td><span t-field="prestation.installation_type"/></td>
                            <td><span t-field="prestation.mentor_id"/></td>

                        </tr>
                    </t>
                </t>
            </t>
        </template>
