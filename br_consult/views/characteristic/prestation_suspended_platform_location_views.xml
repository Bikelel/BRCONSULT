            <field name="name">prestation.suspended.platform.location.list</field>
            <field name="model">prestation.suspended.platform.location</field>
            <field name="arch" type="xml">
                <tree string="Localisation de la plateforme suspendue" multi_edit="1" editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    
